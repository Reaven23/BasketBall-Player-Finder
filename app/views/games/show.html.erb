<div class="page-container">

  <div class="game-title">
    <div class="game-number">
      <%= Game.find(params[:id]).name  %>
    </div>
  </div>

  <div class="game-container d-flex">
    <div class="game-flow">
      <div class="progress">
        <div class="question-number"></div>
        <div class="progress-bar"></div>
      </div>

      <div class="player-image"></div>

      <div class="player_input"></div>
    </div>

    <div class="game-score">
      <div class="score-title">LIVE SCORE</div>

      <div class="score-visual"></div>
      <div class="score-message"></div>
      <div class="score-points"></div>
    </div>
  </div>

</div>
