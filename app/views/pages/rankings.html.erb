<div class="rankings-container">
  <%= render 'shared/navbar' %>
  <div class="container-boards">


    <!-- Tableau avec scrollbar -->
    <div class="score-board">
      <% @users_sorted_by_score.each do |user|%>
        <div class="scorer">
          <% if user.photo.attached? %>
              <%= image_tag user.photo, alt: "#{user.nickname}'s photo", class: "pl-img" %>
          <% end %>
          <div class="user-nickname"><%= user.nickname %></div>
          <div class="user-name"><%= user.email %></div>
          <div class="user-points"><%= user.points %> pts</div>
        </div>
      <% end %>

    </div>

    <!-- Barre de recherche -->
    <div class="search-bar">
      <div class="">
        <input type="text" id="player-search" class="form-control" placeholder="Rechercher un joueur...">
      </div>
    </div>

  </div>
</div>
